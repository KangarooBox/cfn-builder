{{!--
  The AWS::ECR::Repository resource specifies an Amazon Elastic Container
  Registry (Amazon ECR) repository, where users can push and pull Docker images,
  Open Container Initiative (OCI) images, and OCI compatible artifacts.

  https://docs.aws.amazon.com/AWSCloudFormation/latest/UserGuide/aws-resource-ecr-repository.html
 --}}
"ecrrepo{{sanitize this.Name ''}}": {
  "Type": "AWS::ECR::Repository",
  "Properties": {
    {{#if this.RepositoryName}}"RepositoryName": "{{lowercase this.RepositoryName}}",{{/if}}
    {{#if this.ImageScanningConfiguration}}"ImageScanningConfiguration": { {{{inject this.ImageScanningConfiguration}}} },{{/if}}
    {{#if this.ImageTagMutability}}"ImageTagMutability": "{{this.ImageTagMutability}}",{{/if}}
    {{#if this.LifecyclePolicy}}"LifecyclePolicy": { {{{inject this.LifecyclePolicy}}} },{{/if}}
    {{#if this.RepositoryPolicyText}}"RepositoryPolicyText": { {{{inject this.RepositoryPolicyText}}} },{{/if}}
    {{> tags}}
  }
}
