{{!--
  Create a subnet in an existing VPC.

  http://docs.aws.amazon.com/AWSCloudFormation/latest/UserGuide/aws-resource-ec2-subnet.html
 --}}
{{#each this.AZ}}
"ec2sn{{../Type}}{{this}}":{
  "Type":"AWS::EC2::Subnet",
  "Properties":{
    {{#with (lookupById (lookupByNode @root.Region.SubnetAddresses ../Type) this)}}
    "CidrBlock":"{{this.value}}",
    {{/with}}
    "AvailabilityZone":"{{@root.Region.Id}}{{this}}",
    "VpcId":{ "Ref":"VPC" },
    "Tags":[
      { "Key":"Name",         "Value":"{{@root.EnvVersion}}{{@root.EnvName}} {{../Type}} {{this}}" },
      { "Key":"Environment",  "Value":"{{@root.EnvType}}" },
      { "Key":"Version",      "Value":"{{@root.EnvVersion}}" },
      { "Key":"Project",      "Value":"{{@root.ProjectName}}" },
      { "Key":"Role",         "Value":"VPC {{../Type}} Subnet" },
      { "Key":"Owner",        "Value":"{{@root.Owner}}" }
    ]
  }
}{{#unless @last}},{{/unless}}
{{/each}}