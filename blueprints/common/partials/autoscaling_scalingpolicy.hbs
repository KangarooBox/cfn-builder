{{!--
  Adds a scaling policy to an auto scaling group.

  http://docs.aws.amazon.com/AWSCloudFormation/latest/UserGuide/aws-properties-as-policy.html
 --}}
 "assp{{this.Name}}": {
   "Type": "AWS::AutoScaling::ScalingPolicy",
   "Properties": {
      {{#if this.AdjustmentType}}"AdjustmentType": "{{this.AdjustmentType}}",{{/if}}
      {{#if this.Cooldown}}"Cooldown": "{{this.Cooldown}}",{{/if}}
      {{#if this.EstimatedInstanceWarmup}}"EstimatedInstanceWarmup": Integer,{{/if}}
      {{#if this.MetricAggregationType}}"MetricAggregationType": "{{this.MetricAggregationType}}",{{/if}}
      {{#if this.MinAdjustmentMagnitude}}"MinAdjustmentMagnitude": Integer,{{/if}}
      {{#if this.PolicyType}}"PolicyType": "{{this.PolicyType}}",{{/if}}
      {{#if this.ScalingAdjustment}}"ScalingAdjustment": {{this.ScalingAdjustment}},{{/if}}
      {{#if this.StepAdjustments}}"StepAdjustments": [ StepAdjustments, ... ],{{/if}}
      {{#if this.TargetTrackingConfiguration}}"TargetTrackingConfiguration": TargetTrackingConfiguration,{{/if}}
      "AutoScalingGroupName": {"Ref":"asg{{this.AutoScalingGroupName}}"}
   }
}
