"config":{
  "services":{
    "sysvinit":{
      "sendmail":{
        "enabled":"false",
        "ensureRunning":"false"
      }
    }
  },
  "commands":{
    {{#startsWith "linux_ubuntu" this.AMI}}
    "aa":{
      "command":"apt-get upgrade -y"
    },
    {{else is this.AMI "linux_amazon"}}
    "aa":{
      "command":"yum update -y"
    },
    "ab":{
      "command":"yum upgrade -y"
    },
    {{/startsWith}}
    "zz":{
      "command":"/tmp/{{lowercase @root.ProjectName}}.{{lowercase @root.EnvName}}.sh > /var/log/{{lowercase @root.ProjectName}}.{{lowercase @root.EnvName}}.log"
    }
  },
  "files":{
    "/tmp/{{lowercase @root.ProjectName}}.{{lowercase @root.EnvName}}.sh":{
      "source":"https://{{@root.Region.ArtifactsBucket}}.s3.amazonaws.com/user-data/{{lowercase @root.ProjectName}}.{{lowercase @root.EnvName}}.sh",
      "authentication":"S3AccessCreds",
      "mode":"000500",
      "owner":"root",
      "group":"root"
    }
  }
}