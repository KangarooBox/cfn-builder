{{!--
  Creates an AWS Identity and Access Management (IAM) user.

  http://docs.aws.amazon.com/AWSCloudFormation/latest/UserGuide/aws-properties-iam-user.html
 --}}
"{{this.Name}}" : {
  "Type" : "AWS::IAM::User",
  "Properties" : {
    {{~#if this.Groups}}"Groups":[{{#each this.Groups}}"g{{this}}"{{#unless @last}},{{/unless}}{{/each}}],{{/if}}
    {{~#if this.ManagedPolicyArns}}"ManagedPolicyArns":[{{#each this.ManagedPolicyArns}}"{{this}}"{{#unless @last}},{{/unless}}{{/each}}],{{/if}}
    {{~#if this.Path ~}}"Path" : "/{{this.Path ~}}/"{{else ~}}"Path" : "/"{{/if}}
  }
}
    {{!-- "Groups" : [ {{#each this.Groups}}{ "Ref" : "g{{this}}" }{{#unless @last}}, {{/unless}}{{/each}} ] --}}