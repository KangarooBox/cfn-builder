{{!--
  Creates an SNS topic policy.

  http://docs.aws.amazon.com/AWSCloudFormation/latest/UserGuide/aws-properties-sns-policy.html
 --}}
"snsp{{sanitize this.Name ''}}" : {
  "Type" : "AWS::SNS::TopicPolicy",
  "Properties" : {
    "PolicyDocument" : { {{{inject this.PolicyDocument}}} },
    "Topics" : [
    {{#each this.Topics }}
      { "Ref" : "sns{{sanitize this ''}}" }{{#unless @last}},{{/unless}}
    {{/each}}
    ]
  }
}