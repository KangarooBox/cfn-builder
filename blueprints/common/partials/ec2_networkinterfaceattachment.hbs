{{!--
 Attaches an elastic network interface (ENI) to an Amazon EC2 instance.

  http://docs.aws.amazon.com/AWSCloudFormation/latest/UserGuide/aws-resource-ec2-network-interface-attachment.html
 --}}
"netia{{this.Name}}":{
   "Type": "AWS::EC2::NetworkInterfaceAttachment",
   "Properties": {
      "DeleteOnTermination": {{default this.DeleteOnTermination true}},
      "DeviceIndex": "{{default this.DeviceIndex 1}}",
      "InstanceId": {"Ref":"ec2{{this.InstanceId}}" },
      "NetworkInterfaceId": {"Ref":"neti{{this.NetworkInterfaceId}}"}
   }
}
