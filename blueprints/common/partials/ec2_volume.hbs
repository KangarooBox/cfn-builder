{{!--
 Creates a new Amazon Elastic Block Store (Amazon EBS) volume.

  http://docs.aws.amazon.com/AWSCloudFormation/latest/UserGuide/aws-properties-ec2-ebs-volume.html
 --}}
"ec2v{{sanitize this.Name ""}}" : {
  "Type":"AWS::EC2::Volume",
    "Properties" : {
      "AvailabilityZone" : "{{this.AvailabilityZone}}",
      "Size" : "{{this.Size}}",
      {{#if this.AutoEnableID}}"AutoEnableIO" : {{this.AutoEnableID}},{{~/if}}
      {{#if this.Encrypted}}"Encrypted" : {{this.Encrypted}},{{~/if}}
      {{#if this.Iops}}"Iops" : {{this.Iops}},{{~/if}}
      {{#if this.KmsKeyId}}"KmsKeyId" : "{{this.KmsKeyId}}",{{~/if}}
      {{#if this.SnapshotId}}"SnapshotId" : "{{this.SnapshotId}}",{{~/if}}
      {{#if this.VolumeType}}"VolumeType" : "{{this.VolumeType}}",{{~/if}}
      "Tags": [
        { "Key" : "Name",         "Value" : "{{this.Name}} ({{@root.EnvVersion}}{{@root.EnvName}})" },
        { "Key" : "Environment",  "Value" : "{{@root.EnvName}}" },
        { "Key" : "Version",      "Value" : "{{@root.EnvVersion}}" },
        { "Key" : "Project",      "Value" : "{{@root.ProjectName}}" },
        { "Key" : "Role",         "Value" : "{{@root.ProjectName}}" },
        { "Key" : "Owner",        "Value" : "{{@root.Owner}}" }
      ]
   }
}
