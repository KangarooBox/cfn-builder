{{!--
  Creates an Amazon CloudWatch Logs log group that defines common properties for log streams, such as their
  retention and access control rules. Each log stream must belong to one log group.

  http://docs.aws.amazon.com/AWSCloudFormation/latest/UserGuide/aws-resource-logs-loggroup.html
 --}}
"logmtrflt{{this.Name}}" : {
  "Type": "AWS::Logs::MetricFilter",
  "Properties": {
    {{~#if this.LogGroupName}}"LogGroupName":
      {{#startsWith "arn:aws:" this.LogGroupName}}"{{this.LogGroupName}}"{{else}}{"Ref":"{{this.LogGroupName}}"}{{/startsWith}}
    {{/if}}
    "FilterPattern":"{{this.FilterPattern}}",
    "MetricTransformations":[{{#each this.MetricTransformations}}
      { "MetricValue":"{{this.MetricValue}}",
        "MetricNamespace":"{{this.MetricNamespace}}",
        "MetricName":"{{this.MetricName}}"
      }{{#unless @last}},{{/unless}}{{/each}}
    ]
  }
}
