{{!--
  Create a Route53 DNS RecordSet

  http://docs.aws.amazon.com/AWSCloudFormation/latest/UserGuide/aws-properties-route53-recordset.html
 --}}
 "53rs{{sanitize this.Name ''}}":{
  "Type":"AWS::Route53::RecordSet",
  "Properties":{
    "Comment":
    {{#if this.Comment}}"{{this.Comment}}",
    {{else}}"{{@root.ProjectName}}: {{this.Name}} ({{@root.EnvVersion}}{{@root.EnvName}})",
    {{/if}}

    {{#is this.Scheme "internal"}}
    {{#with (lookupById @root.DNS @root.Route53::RecordSet.Internal.Domain)}}
    "HostedZoneId":"{{this.PrivateHostedZoneId}}",
    {{/with}}
    "Name":"{{#if this.DNSName}}{{this.DNSName}}{{else}}{{lowercase @root.ProjectName}}.{{@root.Route53::RecordSet.Internal.Domain}}.{{/if}}",
    {{else}}
    {{#with (lookupById @root.DNS @root.Route53::RecordSet.External.Domain)}}
    "HostedZoneId":"{{this.HostedZoneId}}",
    {{/with}}
    "Name":"{{#if this.DNSName}}{{this.DNSName}}{{else}}{{lowercase @root.ProjectName}}.{{lowercase @root.Region.Name}}.{{@root.EnvVersion}}.{{@root.EnvName}}.{{@root.Route53::RecordSet.External.Domain}}.{{/if}}",
    {{/is}}
    "Type":"{{default this.Type "CNAME"}}",
    "TTL":{{default this.TTL 300}},
    "ResourceRecords":[
      {{!-- {{#if this.ResourceRecord}}{"Fn::GetAtt":["elb{{this.ResourceRecord}}","DNSName"]}{{/if}} --}}
      {{#each this.ResourceRecords}}
        {{#ifObject this}}
          { {{{inject this}}} }
        {{else}}
          {{#ifEq ../Type "TXT"}}
            "\"{{{this}}}\""
          {{else}}
            "{{this}}"
          {{/ifEq}}
        {{/ifObject}}
      {{#unless @last}},{{/unless}}{{/each}}
    ]
  }
}
